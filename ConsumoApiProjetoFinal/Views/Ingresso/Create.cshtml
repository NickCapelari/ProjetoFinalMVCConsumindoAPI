@model ConsumoApiProjetoFinal.Models.ViewModels.IngressoFormViewModel

@{
    ViewData["Title"] = "Create";
    
}

<h1>Create</h1>

<h4>Ingresso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ingresso.ValorFinal" class="control-label"></label>
                <input asp-for="Ingresso.ValorFinal" class="form-control" />
                <span asp-validation-for="Ingresso.ValorFinal" class="text-danger"></span>
            </div>
           <div class="form-group">
               <label asp-for="Ingresso.EventoId" class="control-label"></label>
                <select asp-for="Ingresso.EventoId" 
                asp-items="@(new SelectList(@Model.Evento,"Id","Nome"))" 
                class="form-control"> </select>
            </div>
            <div class="form-group">
               <label asp-for="Ingresso.PessoaId" class="control-label"></label>
                <select asp-for="Ingresso.PessoaId" 
                asp-items="@(new SelectList(@Model.Pessoa,"Id","Nome"))" 
                class="form-control"> </select>
            </div>
             <div class="form-group">
               <label asp-for="Ingresso.TipoIngressoId" class="control-label"></label>
                <select asp-for="Ingresso.TipoIngressoId" 
                asp-items="@(new SelectList(@Model.TipoIngresso,"Id","Tipo"))" 
                class="form-control"> </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
