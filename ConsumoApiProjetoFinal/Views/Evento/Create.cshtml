@model ConsumoApiProjetoFinal.Models.ViewModels.EventoFormViewModel

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar Novo Evento</h1>

<h4>Evento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Evento.Nome" class="control-label"></label>
                <input asp-for="Evento.Nome" class="form-control" />
                <span asp-validation-for="Evento.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.Descricao" class="control-label"></label>
                <input asp-for="Evento.Descricao" class="form-control" />
                <span asp-validation-for="Evento.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.DataInicio" class="control-label"></label>
                <input asp-for="Evento.DataInicio" class="form-control" />
                <span asp-validation-for="Evento.DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.DataFim" class="control-label"></label>
                <input asp-for="Evento.DataFim", class="form-control"  />
                <span asp-validation-for="Evento.DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.Valor" class="control-label"></label>
                <input asp-for="Evento.Valor" class="form-control" />
                <span asp-validation-for="Evento.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label asp-for="Evento.LocalEventoId" class="control-label"></label>
                <select asp-for="Evento.LocalEventoId" 
                asp-items="@(new SelectList(@Model.LocalEventos,"Id","Name"))" 
                class="form-control"> </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
